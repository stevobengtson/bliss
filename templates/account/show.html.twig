{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block body %}
    <h1>Account</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ account.name }}</td>
            </tr>
            <tr>
                <th>Balance</th>
                <td>{{ account.balance }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ account.type.value }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_account_index', {budget_id: account.budget.id }) }}">back to list</a>

    <a href="{{ path('app_account_edit', {'id': account.id}) }}">edit</a>

    {{ include('account/_delete_form.html.twig') }}
{% endblock %}
