    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category_group in category_groups %}
            <tr>
                <td>{{ category_group.name }}</td>
                <td>
                    <a href="{{ path('app_category_group_show', {'id': category_group.id}) }}">show</a>
                    <a href="{{ path('app_category_group_edit', {'id': category_group.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_group_new', {budget_id: budget.id}) }}">Create new</a>
{% endblock %}
