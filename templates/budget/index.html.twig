{% extends 'base.html.twig' %}

{% block title %}Budgets{% endblock %}

{% block body %}
    <h1>Budgets</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for budget in budgets %}
            <tr>
                <td>{{ budget.name }}</td>
                <td>
                    <a href="{{ path('app_budget_show', {'id': budget.id}) }}">show</a>
                    <a href="{{ path('app_budget_edit', {'id': budget.id}) }}">edit</a>
                    <a href="{{ path('app_account_index', {'budget_id': budget.id})}}">Accounts</a>
                    <a href="{{ path('app_category_group_index', {'budget_id': budget.id})}}">Category Groups</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_budget_new') }}">Create new</a>
{% endblock %}
